<?xml version="1.0" encoding="utf-8"?>
<deadline.scalelayout.ScaleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scalelayout"
    android:background="@android:color/black"
    tools:context="deadline.scalelayout.MainActivity">

    <TextView
        android:id="@id/scaleLayout_top"
        android:text="标题这里"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<!--    <TextView
        android:id="@id/scaleLayout_bottom"
        android:text="Hello World! Hello World!"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <HorizontalScrollView
        android:id="@id/scaleLayout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_image"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        </LinearLayout>
    </HorizontalScrollView>

    <deadline.scalelayout.MultiViewPager
        android:id="@id/scaleLayout_center"
        app:matchChildWidth="@+id/child_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</deadline.scalelayout.ScaleLayout>
